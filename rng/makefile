###############################################################################
# makefile
###############################################################################

.ONESHELL:

###############################################################################

EXE = $(basename $(SRC))
SRC = $(wildcard *.cc)

###############################################################################

CXXFLAGS = -flto -march=native -O3 -Wall

###############################################################################

all: $(EXE)

clean:
	-rm -fv $(EXE) core* nohup.out *~

exe: $(EXE)

###############################################################################

.PHONY: all clean exe

###############################################################################
